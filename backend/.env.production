# Production Environment Configuration for MySQL
# Copy this to .env and update the values for your production environment

# MySQL Database Configuration
DATABASE_URL=mysql+pymysql://username:password@localhost:3306/omr_evaluator_prod

# JWT Configuration - CHANGE THESE IN PRODUCTION!
SECRET_KEY=your-super-secret-jwt-key-change-this-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30

# File Upload Configuration
UPLOAD_DIR=../uploads
MAX_FILE_SIZE_MB=10
ALLOWED_FILE_TYPES=jpg,jpeg,png,pdf

# OMR Processing Configuration
ALLOW_RESUBMISSION=false
REQUIRE_TEACHER_APPROVAL_FOR_RESUBMISSION=true

# CORS Configuration (add your frontend URLs)
CORS_ORIGINS=https://your-production-domain.com

# MySQL Connection Pool Settings (optional - defaults are in database.py)
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20
DB_POOL_RECYCLE=3600
